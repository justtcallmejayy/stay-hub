<% layout("layouts/boilerplate") %> 

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h3 class="mb-4">Listing Details</h3>

      <div class="card">


        <div class="card-body">
          <h5 class="card-title mb-2"><%= listing.title %></h5>

          <% if (listing.description) { %>
          <p class="card-text"><strong><%= listing.description %></strong></p>
          <% } %>

          <p class="mb-0">
            <strong>Price:</strong>
            $<%= Number(listing.price || 0).toLocaleString("en-US") %> /night
          </p>
          <p class="mb-0"><strong>Location:</strong> <%= listing.location %></p>
          <p class="mb-0"><strong>Country:</strong> <%= listing.country %></p>
        </div>
      </div>

      <div class="mt-3 d-flex flex-wrap gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning"
          >Edit</a
        >

        <form
          action="/listings/<%= listing._id %>?_method=DELETE"
          method="post"
          onsubmit="return confirm('Delete this listing?');"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <a href="/listings" class="btn btn-secondary ms-auto"
          >Back to Listings</a
        >
      </div>
    </div>
  </div>
</div>
