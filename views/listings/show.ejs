<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Listing Details</h3>
  </div>
  <div class="card col-6 offset-2">
    <img
      class="card-img-top show-image"
      src="<%= listing.images %>"
      alt="listing_image"
    />

    <div class="card-body">
      <p>
        <%= listing.title %> <br>
        <strong> <%= listing.description %> </strong> <br>
        Price: $<%= listing.price.toLocaleString("en-US") %> /night <br>
        Location: <%= listing.location %> <br>
        Country: <%= listing.country %>
      </p>
    </div>
  </div>
</div>

<div class="btns">
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-warning col-1 offset-2"
    >Edit</a
  >
  <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
    <button type="submit" class="btn btn-danger offset-4">Delete</button>
  </form>

  <a href="/listings" class="btn btn-secondary">Back to Listings</a>
</div>
